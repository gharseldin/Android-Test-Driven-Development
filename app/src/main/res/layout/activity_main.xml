<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SearchPlantActivity">

    <AutoCompleteTextView
            android:text="AutoCompleteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/plantName" android:hint="Plant Name"/>
    <Button

            android:text="Search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="16dp"
            android:id="@+id/searchPlants"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/plantName"/>

</android.support.constraint.ConstraintLayout>